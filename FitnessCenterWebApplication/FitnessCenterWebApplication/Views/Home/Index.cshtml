@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-2 mb-5">

    <div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-light shadow-lg"
         style="background-image: url('../Images/kaplan.jpg');
                background-size: cover;
                background-position: center;
                background-attachment: fixed;
                border-radius: 20px;
                height: 500px;
                display: flex;
                align-items: center;
                justify-content: center;">

        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); border-radius: 20px;"></div>

        <div class="col-md-8 p-lg-5 mx-auto my-5 position-relative text-white">
            <h1 class="display-4 fw-bold">Welcome To Tiger Fitness Center</h1>
            <p class="lead fw-normal mb-4">Gücünü Serbest Bırak, Vahşi Doğanı Keşfet!</p>

            @if (!User.Identity.IsAuthenticated)
            {
                <div class="d-flex gap-3 justify-content-center">
                    <a class="btn btn-warning btn-lg px-4 fw-bold" asp-controller="Account" asp-action="Register">
                        Kayıt Ol
                    </a>
                    <a class="btn btn-outline-light btn-lg px-4" asp-controller="Account" asp-action="Login">
                        Giriş Yap
                    </a>
                </div>
            }
            else
            {
                @if (User.IsInRole("Member"))
                {
                    <a class="btn btn-warning btn-lg px-5 fw-bold" asp-controller="Appointment" asp-action="Create">
                        <i class="fas fa-calendar-plus me-2"></i>Hemen Randevu Al
                    </a>
                }
            }
        </div>
    </div>

    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm text-center p-4 hover-up">
                <div class="text-warning mb-3"><i class="fas fa-dumbbell fa-3x"></i></div>
                <h5>Modern Ekipmanlar</h5>
                <p class="text-muted small">En son teknoloji spor aletleri ile sınırlarını zorla.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm text-center p-4 hover-up">
                <div class="text-warning mb-3"><i class="fas fa-user-friends fa-3x"></i></div>
                <h5>Uzman Eğitmenler</h5>
                <p class="text-muted small">Alanında profesyonel hocalarımızla hedefine ulaş.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm text-center p-4 hover-up">
                <div class="text-warning mb-3"><i class="fas fa-clock fa-3x"></i></div>
                <h5>Esnek Saatler</h5>
                <p class="text-muted small">Sana en uygun zamanda, dilediğin gibi antrenman yap.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-up {
        transition: transform 0.3s;
    }

        .hover-up:hover {
            transform: translateY(-10px);
        }
</style>