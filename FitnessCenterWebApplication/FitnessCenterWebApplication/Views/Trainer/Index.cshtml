@model IEnumerable<FitnessCenterWebApplication.Models.Entities.Trainer>

@{
    ViewData["Title"] = "Eğitmenlerimiz";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-5 text-primary mb-0">
                    <i class="fas fa-users me-2"></i>Eğitmenlerimiz
                </h1>
                <p class="text-muted mb-0">Uzman kadromuzla tanışın</p>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success shadow-sm">
                    <i class="fas fa-user-plus me-1"></i>Yeni Eğitmen Ekle
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var trainer in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card @(!trainer.IsActive ? "border-danger" : "")">

                        <div class="card-header bg-white border-bottom-0 pt-4 text-center">
                            <div class="position-relative d-inline-block">
                                @if (!string.IsNullOrEmpty(trainer.ProfileImageUrl))
                                {
                                    <img src="@trainer.ProfileImageUrl" alt="@trainer.FullName"
                                         class="rounded-circle img-thumbnail shadow-sm"
                                         style="width: 120px; height: 120px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-light d-inline-flex justify-content-center align-items-center shadow-sm"
                                         style="width: 120px; height: 120px;">
                                        <i class="fas fa-user fa-3x text-secondary"></i>
                                    </div>
                                }
                                @if (!trainer.IsActive)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        Pasif
                                    </span>
                                }
                            </div>
                            <h5 class="card-title mt-3 mb-1 fw-bold">@trainer.FullName</h5>
                            <span class="badge bg-primary bg-opacity-10 text-primary">@trainer.Specialization</span>
                        </div>

                        <div class="card-body pt-2">
                            <p class="card-text text-muted small text-center px-2">
                                @(trainer.Bio.Length > 100 ? trainer.Bio.Substring(0, 97) + "..." : trainer.Bio)
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3 border-top pt-3">
                                <span class="small text-muted">
                                    <i class="fas fa-briefcase me-1"></i>@trainer.ExperienceYears Yıl
                                </span>
                                @if (trainer.GymCenter != null)
                                {
                                    <span class="badge bg-light text-dark border">
                                        <i class="fas fa-building me-1"></i>@trainer.GymCenter.Name
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-light border-top-0 p-3">
                            <div class="d-grid gap-2">

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="TrainerAvailability" asp-action="Index" asp-route-trainerId="@trainer.Id"
                                       class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-clock me-1"></i>Çalışma Saatleri
                                    </a>

                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-sm btn-outline-warning w-100">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-sm btn-outline-danger w-100">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    </div>
                                }
                                else if (User.Identity.IsAuthenticated)
                                {
                                    // Kullanıcılar için Randevu Butonu
                                    // Not: Doğrudan Create sayfasına yönlendirip TrainerId'yi querystring ile taşıyoruz
                                    <a asp-controller="Appointment" asp-action="Create" asp-route-trainerId="@trainer.Id"
                                       class="btn btn-sm btn-success @(!trainer.IsActive ? "disabled" : "")">
                                        <i class="fas fa-calendar-check me-1"></i>Randevu Al
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-user-slash fa-3x mb-3"></i>
            <h4>Henüz Eğitmen Bulunmuyor</h4>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary mt-2">İlk Eğitmeni Ekle</a>
            }
        </div>
    }
</div>

<style>
    .hover-card { transition: transform 0.2s; }
    .hover-card:hover { transform: translateY(-5px); }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}