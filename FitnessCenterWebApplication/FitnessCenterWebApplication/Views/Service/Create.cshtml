@model FitnessCenterWebApplication.Models.Entities.Service

@{
    ViewData["Title"] = "Yeni Hizmet Oluştur";
}

<div class="container mt-4">
    <!-- Sayfa Başlığı -->
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h1 class="display-5 text-primary">
                <i class="fas fa-plus-circle me-2"></i>Yeni Hizmet Oluştur
            </h1>
            <p class="text-muted">
                Fitness merkeziniz için yeni bir hizmet tanımlayın
            </p>
        </div>
    </div>

    <!-- Form Kartı -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm create-card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-dumbbell me-2"></i>Hizmet Bilgileri
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Hizmet Adı -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-star me-1"></i>Hizmet Adı
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Kişisel Antrenman" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Açıklama -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Hizmet açıklamasını giriniz"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Süre -->
                        <div class="mb-3">
                            <label asp-for="DurationMinutes" class="form-label fw-bold">
                                <i class="fas fa-clock me-1"></i>Süre (Dakika)
                            </label>
                            <input asp-for="DurationMinutes" type="number" class="form-control"
                                   placeholder="Örn: 60" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>

                        <!-- Ücret -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">
                                <i class="fas fa-tag me-1"></i>Ücret
                            </label>
                            <input asp-for="Price" type="number" step="0.01"
                                   class="form-control" placeholder="Örn: 750.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Gym Center -->
                        <div class="mb-4">
                            <label asp-for="GymCenterId" class="form-label fw-bold">
                                <i class="fas fa-building me-1"></i>Spor Salonu
                            </label>
                            <select asp-for="GymCenterId"
                                    asp-items="ViewBag.GymCenters"
                                    class="form-select">
                                <option value="">-- Salon Seçiniz --</option>
                            </select>
                            <span asp-validation-for="GymCenterId" class="text-danger"></span>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Geri Dön
                            </a>

                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Hizmeti Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Özel CSS -->
<style>
    .create-card {
        border-radius: 10px;
        overflow: hidden;
    }

        .create-card .card-header {
            border-bottom: 2px solid rgba(255,255,255,0.2);
        }

    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
