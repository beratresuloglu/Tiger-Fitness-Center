@model FitnessCenterWebApplication.Models.Entities.TrainerAvailability

@{
    ViewData["Title"] = "Çalışma Saati Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Yeni Çalışma Saati Ekle</h5>
                </div>
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="TrainerId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Gün Seçiniz</label>
                            <select asp-for="DayOfWeek" class="form-select" asp-items="ViewBag.Days">
                                <option value="">-- Gün Seçin --</option>
                            </select>
                            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-6">
                                <label class="form-label fw-bold">Başlangıç Saati</label>
                                <input asp-for="StartTime" type="time" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label class="form-label fw-bold">Bitiş Saati</label>
                                <input asp-for="EndTime" type="time" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-route-trainerId="@Model.TrainerId" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-1"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}