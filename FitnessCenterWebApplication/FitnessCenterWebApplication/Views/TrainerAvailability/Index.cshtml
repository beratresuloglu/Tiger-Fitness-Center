@model IEnumerable<FitnessCenterWebApplication.Models.Entities.TrainerAvailability>

<div class="container mt-4">
    <h3>@ViewBag.TrainerName - Çalışma Saatleri</h3>
    <a asp-action="Create" asp-route-trainerId="@ViewBag.TrainerId" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Yeni Saat Ekle
    </a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Gün</th>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DayOfWeek</td>
                    <td>@item.StartTime.ToString(@"hh\:mm")</td>
                    <td>@item.EndTime.ToString(@"hh\:mm")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Trainer" asp-action="Index" class="btn btn-secondary">Eğitmenlere Dön</a>
</div>